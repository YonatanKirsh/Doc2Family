<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/question_dialog_text_view_question_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/textPrimary"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/question_dialog_edit_text_answer_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:hint="@string/submit_answer_hint"
        app:layout_constraintTop_toBottomOf="@id/question_dialog_text_view_question_content"
        />


</LinearLayout>