<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/friend_dialog_text_view_friend_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:textColor="@color/textPrimary"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/friend_dialog_text_view_friend_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="15sp"
        android:textColor="@color/textPrimary"
        app:layout_constraintTop_toBottomOf="@id/friend_dialog_text_view_friend_name"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/friend_dialog_text_view_is_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/textSecondary"
        android:gravity="center_horizontal"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/friend_dialog_text_view_friend_email"
        app:layout_constraintRight_toRightOf="parent"
        />

    <!--    below should be made visible only for admins -->

    <CheckBox
        android:id="@+id/friend_dialog_checkbox_make_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/admin"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/friend_dialog_text_view_friend_email"
        />

</androidx.constraintlayout.widget.ConstraintLayout>