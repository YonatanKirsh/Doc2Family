<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <EditText
        android:id="@+id/question_dialog_edit_text_question_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/question_dialog_text_view_answer_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/textPrimary"
        android:hint="@string/doctors_answer_hint"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_update_popup_content"
        app:layout_constraintLeft_toLeftOf="parent"/>

</LinearLayout>